                            $('#formerrormsg').append('<span style="color:red;">Veuillez vérifier la saisie de l\'email</span><br/>');
                        }
                        else if (prop2 == "contacttext") {
                            document.commentform.contacttext.value = "";
                            $('#formerrormsg').append('<span style="color:red;">Veuillez vérifier la saisie du message</span><br/>');
                        }
                        else if (prop2 == "contactcaptcha") {
                            $("#commentcaptchaid").val("");
                            $('#formerrormsg').append('<span style="color:red;">Veuillez vérifier la saisie du captcha</span><br/>');
                        }
                        else if (prop2 == "contactprevent") {
                            $('#formerrormsg').append('<span style="color:red;">Veuillez rafraîchir la page et recommencer</span><br/>');
                        }
                    }
                }
            }
            $('#ajaxloader').css('display', 'none');
        }
